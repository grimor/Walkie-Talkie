        android:layout_height="wrap_content"
        android:password="true"
        />
    <CheckBox android:id="@+id/check_pass"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:text="Ukryj hasÅ‚o"
        />

    <LinearLayout
